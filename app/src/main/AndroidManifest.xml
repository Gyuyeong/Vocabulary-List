<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baudaegam.pocketvocab">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FlashCardActivity"></activity>
        <activity android:name=".SelectCategoryActivity" />
        <activity android:name=".SearchVocabActivity" />
        <activity android:name=".DeleteCategoryActivity" />
        <activity
            android:name=".DeleteVocabActivity"
            android:parentActivityName=".VocabActivity" />
        <activity
            android:name=".AddEditVocabActivity"
            android:parentActivityName=".VocabActivity" />
        <activity
            android:name=".VocabActivity"
            android:launchMode="singleTop" />
        <activity android:name=".CategoryActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>